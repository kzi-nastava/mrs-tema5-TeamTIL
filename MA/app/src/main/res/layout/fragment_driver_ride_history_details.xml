<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- TOP TEXT -->
        <TextView
            android:id="@+id/ride_history_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold_font"
            android:text="@string/ride_details_heading"
            android:textColor="@color/text_white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tvRideAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/white"
            android:drawablePadding="2dp"
            android:fontFamily="@font/montserrat_semibold_font"
            android:text="Stražilovska 32 → Bulevar Kralja Petra 7"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/map_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bg_purple_dark_tint"
        android:layout_margin="12dp">

        <!-- BOTTOM SPLIT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- LEFT SIDE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <!-- PASSENGERS LABEL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passengers"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

                <!-- PASSENGERS CONTAINER -->
                <LinearLayout
                    android:id="@+id/passengersContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <!-- VERTICAL DIVIDER -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/text_gray"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <!-- RIGHT SIDE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- RIDE RATING -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride rating"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

                <!-- STARS -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <!-- primer 5 zvezdica -->
                    <ImageView android:src="@drawable/ic_star_filled" android:layout_height="24dp" android:layout_width="24dp" android:padding="2dp"/>
                    <ImageView android:src="@drawable/ic_star_filled" android:layout_height="24dp" android:layout_width="24dp" android:padding="2dp"/>
                    <ImageView android:src="@drawable/ic_star_filled" android:layout_height="24dp" android:layout_width="24dp" android:padding="2dp"/>
                    <ImageView android:src="@drawable/ic_star_half" android:layout_height="24dp" android:layout_width="24dp" android:padding="2dp"/>
                    <ImageView android:src="@drawable/ic_star_empty" android:layout_height="24dp" android:layout_width="24dp" android:padding="2dp"/>
                </LinearLayout>

                <!-- COMMENT -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Driver was polite and ride was smooth."
                    android:textColor="@color/text_white"
                    android:background="@drawable/bg_purple_tint"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_regular_font"
                    android:paddingStart="10dp"
                    android:padding="4dp"/>

                <!-- ISSUES LABEL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride issues"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

                <!-- ISSUES CONTAINER -->
                <LinearLayout
                    android:id="@+id/issuesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- START/END TIME & DURATION/DISTANCE SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- LEFT SIDE: Start / End time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <!-- Start time label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start time"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

                <!-- Start time value -->
                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:32"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular_font"
                    android:layout_marginBottom="8dp"/>

                <!-- End time label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End time"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

                <!-- End time value -->
                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:05"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular_font"/>

            </LinearLayout>

            <!-- VERTICAL DIVIDER -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/text_gray"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <!-- RIGHT SIDE: Duration / Distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- Duration label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

                <!-- Duration value -->
                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1h 33m"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular_font"
                    android:layout_marginBottom="8dp"/>

                <!-- Distance label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

                <!-- Distance value -->
                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.5 km"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular_font"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- LEFT SIDE: Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,050 RSD"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_semibold_font"/>

            </LinearLayout>

            <!-- RIGHT SIDE: Status Button -->
            <Button
                android:id="@+id/btnRideStatus"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Completed"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:backgroundTint="@color/button_green"
                android:fontFamily="@font/montserrat_semibold_font"
                android:textSize="14sp"
                android:layout_gravity="bottom"/>

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
