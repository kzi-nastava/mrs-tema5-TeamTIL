<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:clipToPadding="false"
    android:background="@drawable/background_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_profile_title"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card_main"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvScreenTitle">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_background"
                android:padding="15dp"
                android:src="@drawable/ic_person_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <LinearLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/imgProfile"
                app:layout_constraintEnd_toStartOf="@+id/btnEditProfile"
                app:layout_constraintStart_toEndOf="@id/imgProfile"
                app:layout_constraintTop_toTopOf="@id/imgProfile">

                <TextView
                    android:id="@+id/headerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Petar PetroviÄ‡"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/headerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="petarpetrovic@gmail.com"
                    android:textColor="#B0B0B0"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/bg_button_yellow"
                android:paddingHorizontal="10dp"
                android:text="@string/edit_profile_title"
                android:textAllCaps="false"
                android:textColor="@color/text_dark"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imgProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgProfile" />

            <LinearLayout
                android:id="@+id/tabsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_tabs_outline"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/imgProfile">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="6dp"
                    android:text="@string/profile_info_title"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/favorite_rides_title"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ride_history_title"
                    android:textColor="@color/black" />
            </LinearLayout>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/labelBarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="labelName,labelSurname,labelEmail,labelAddress,labelPhone" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/name_title"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tabsContainer" />

            <EditText
                android:id="@+id/valueName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_input_pill"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="Petar"
                android:inputType="textPersonName"
                android:enabled="false"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/labelName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/labelBarrier"
                app:layout_constraintTop_toTopOf="@id/labelName" />

            <TextView
                android:id="@+id/labelSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/surname_title"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelName" />

            <EditText
                android:id="@+id/valueSurname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_pill"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="Petrovic"
                android:inputType="textPersonName"
                android:enabled="false"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/labelSurname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/valueName"
                app:layout_constraintTop_toTopOf="@id/labelSurname" />

            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/email_title"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelSurname" />

            <EditText
                android:id="@+id/valueEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_pill"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="petarpetrovic@gmail.com"
                android:inputType="textEmailAddress"
                android:enabled="false"
                android:textColor="@color/text_dark"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/labelEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/valueName"
                app:layout_constraintTop_toTopOf="@id/labelEmail" />

            <TextView
                android:id="@+id/labelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/address_title"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelEmail" />

            <EditText
                android:id="@+id/valueAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_pill"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="Bulevar despota Stefana 7a"
                android:inputType="textPostalAddress"
                android:enabled="false"
                android:textColor="@color/text_dark"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/labelAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/valueName"
                app:layout_constraintTop_toTopOf="@id/labelAddress" />

            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/phone_title"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelAddress" />

            <EditText
                android:id="@+id/valuePhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_pill"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="+381 64 123 123"
                android:inputType="phone"
                android:enabled="false"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/labelPhone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/valueName"
                app:layout_constraintTop_toTopOf="@id/labelPhone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_button_green"
                android:text="@string/save_changes_title"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/valuePhone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>