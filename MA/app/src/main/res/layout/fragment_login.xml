<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".forms.LoginFragment">

    <!-- Logo Container -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/tiltaxi_logo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo_text"
            android:textColor="@color/text_white"
            android:textSize="24sp"
            android:fontFamily="@font/rollerscript_font" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textSize="48sp"
        android:textColor="@color/text_white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/loginCard"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/tactic_sans_regular" />

    <!-- Login Card -->
    <LinearLayout
        android:id="@+id/loginCard"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/form_card_background"
        android:padding="32dp">

        <!-- Email Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_hint"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_background"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_dark"
            android:textColorHint="#888888"
            android:inputType="textEmailAddress"
            android:hint="@string/enter_email"
            android:autofillHints="emailAddress"
            android:layout_marginBottom="24dp" />

        <!-- Password Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_hint"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_background"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_dark"
            android:textColorHint="#888888"
            android:inputType="textPassword"
            android:hint="@string/enter_password"
            android:autofillHints="password"
            android:layout_marginBottom="24dp" />

        <!-- Login Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/login_button"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/confirm_button_background"
            android:layout_marginBottom="24dp" />

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>
