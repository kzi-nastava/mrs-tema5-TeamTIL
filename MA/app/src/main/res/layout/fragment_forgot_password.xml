<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".fragments.forms.ForgotPasswordFragment">

    <!-- Logo Container -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/tiltaxi_logo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo_text"
            android:textColor="@color/text_white"
            android:textSize="24sp"
            android:fontFamily="@font/rollerscript_font" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_title"
        android:textSize="42sp"
        android:textColor="@color/text_white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/forgotPasswordCard"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/tactic_sans_regular"
        android:gravity="center" />

    <!-- Forgot Password Card -->
    <LinearLayout
        android:id="@+id/forgotPasswordCard"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/form_card_background"
        android:padding="32dp">

        <!-- Email Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_hint"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_background"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_dark"
            android:textColorHint="#888888"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint"
            android:autofillHints="emailAddress"
            android:layout_marginBottom="24dp" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Cancel Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:text="@string/cancel_button"
                android:textColor="@color/text_white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/cancel_button_background" />

            <!-- Reset Password Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnResetPassword"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:text="@string/reset_password_button"
                android:textColor="@color/text_dark"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/confirm_button_background" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
